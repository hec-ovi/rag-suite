# === HOST PATHS (absolute paths) ===
OLLAMA_MODELS_DIR=/absolute/path/to/ollama-models
QDRANT_STORAGE_DIR=/absolute/path/to/rag-suite/qdrant/storage
BACKEND_DATA_DIR=/absolute/path/to/rag-suite/backend/data

# === ROCm / GPU ===
HSA_OVERRIDE_GFX_VERSION=11.5.1
HIP_VISIBLE_DEVICES=0

# === OLLAMA ===
OLLAMA_CHAT_MODEL=gpt-oss:20b
OLLAMA_EMBEDDING_MODEL=bge-m3:latest
OLLAMA_KEEP_ALIVE=5m
OLLAMA_FLASH_ATTENTION=1
OLLAMA_KV_CACHE_TYPE=q8_0
OLLAMA_NUM_PARALLEL=2
OLLAMA_MAX_LOADED_MODELS=2

# === BACKEND ===
QDRANT_COLLECTION_PREFIX=rag_suite_project
